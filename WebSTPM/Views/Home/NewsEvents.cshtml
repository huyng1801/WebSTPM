@model IEnumerable<WebSTPM.Models.NewsEvent>

@{
    ViewData["Title"] = "Danh sách sự kiện và tin tức";
}

<h1>Danh sách các sự kiện và tin tức</h1>

<div class="row">
    @foreach (var newsEvent in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@newsEvent.ImageUrl" class="card-img-top" alt="@newsEvent.Title" style="width:100%; height:200px; object-fit:cover;">
                <div class="card-body">
                    <h5 class="card-title">@newsEvent.Title</h5>
                    <p class="card-text">@newsEvent.Content.Substring(0, 100) + "..."</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="@Url.Action("NewsEventDetails", "Home", new { id = newsEvent.NewsEventID })" class="btn btn-sm btn-outline-secondary">Chi tiết</a>
                        </div>
                        <small class="text-muted">@newsEvent.CreatedAt.ToShortDateString()</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
